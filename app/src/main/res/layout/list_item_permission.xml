<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/insight_background"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/permissionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="ACCESS_FINE_LOCATION" />

    <TextView
        android:id="@+id/permissionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="14sp"
        tools:text="Allows the app to get your precise location using GPS." />

    <!-- This TextView will only be visible if usage data is found -->
    <TextView
        android:id="@+id/permissionLastUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="gone"
        tools:text="Last used: 2 hours ago"
        tools:visibility="visible" />

</LinearLayout>

